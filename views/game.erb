<div class="row" id="row_1">

  <div class="col-sm-12" id="header_div">

    <h1 class="header">Battle Cats</h1>

  </div>
</div>

<div class="row">

  <div class="col-sm-3">

    <h3>Cat Stats:</h3>

    <ol>
      <% @cats.each do |cat|%>
      <li><%=cat.name()%> Wins: <%=cat.wins()%> Losses: <%=cat.loss()%></li>
      <%end%>
    </ol>

  </div>

  <div class="col-sm-9">

    <div class="cat_div">
      <div class="modal_container">
        <h4><%= @kitty1.name%></h4>
        <!-- Trigger the modal with a button -->
        <a data-toggle="modal" data-target="#myModal"><div class="pic-div"><img class="cat-pic" src="<%=@kitty1.image%>" /></div></a>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">


            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
              </div>
              <div class="modal-body">
                <img src="<%= @kitty1.image%>">
                <p><%= @kitty1.name%></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <form name="choice" action="/game" method="post">
        <input name="_method" type="hidden" value="patch">
        <input name="choice" type="hidden" value="left_cat">
        <input name="winning_id" type="hidden" value="<%=@kitty1.id%>">
        <input name="losing_id" type="hidden" value="<%=@kitty2.id%>">

        <button name="choice" type="submit" class="btn btn-danger">Cat 1</button>
      </form>
    </div>




    <div class="cat_div">
      <%= @kitty2.name%>
      <div class="modal_container">
        <h2>Modal Example</h2>
        <!-- Trigger the modal with a button -->
        <a data-toggle="modal" data-target="#myModal2"><div class="pic-div"><img class="cat-pic" src="<%=@kitty2.image%>" /></div></a>

        <!-- Modal -->
        <div class="modal fade" id="myModal2" role="dialog">
          <div class="modal-dialog">


            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
              </div>
              <div class="modal-body">
                <img src="<%= @kitty2.image%>">
                <p><%= @kitty2.name%></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <form name="choice" action="/game" method="post">
        <input name="_method" type="hidden" value="patch">
        <input name="choice" type="hidden" value="right_cat">
        <input name="winning_id" type="hidden" value="<%=@kitty2.id%>">
        <input name="losing_id" type="hidden" value="<%=@kitty1.id%>">

        <button name="choice" type="submit" class="btn btn-danger">Cat 2</button>
      </form>
    </div>

  </div>

</div>


